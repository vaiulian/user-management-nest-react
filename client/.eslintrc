
{
    "plugins": [
          "react"
      ],
      "parserOptions": {
          "ecmaVersion": 6,
          "sourceType": "module",
          "ecmaFeatures": {
              "jsx": true
          }
      },
      "env": {
          "es6":     true,
          "browser": true,
          "node":    true,
          "mocha":   true
      },   
      "extends": [
          "eslint:recommended", 
          "plugin:react/recommended",
          "airbnb",
          "prettier"
      ],    
      "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
      },
      "parser": "babel-eslint"
  }